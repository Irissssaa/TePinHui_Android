<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- 搜索标题栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp">

        <!-- 返回按钮 -->
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/back"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"/>

        <!-- 搜索输入框 -->
        <EditText
            android:id="@+id/et_search"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:hint="搜索消息"
            android:textSize="14sp"
            android:paddingHorizontal="16dp"
            android:background="#F5F5F5"
            android:drawablePadding="8dp"
            android:imeOptions="actionSearch"/>

        <!-- 搜索按钮 -->
        <TextView
            android:id="@+id/tv_search_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="搜索"
            android:textSize="14sp"
            android:textColor="#FF4081"
            android:layout_marginStart="12dp"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"/>
    </LinearLayout>

    <!-- 热门搜索标签区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="热门搜索"
            android:textSize="14sp"
            android:textColor="#999999"
            android:layout_marginBottom="12dp"/>

        <!-- 方案二：使用嵌套的LinearLayout实现换行 -->
        <LinearLayout
            android:id="@+id/layout_hot_tags_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 第一行：3个标签 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tv_hot_logistics"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="物流信息"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:layout_marginEnd="8dp"
                    android:clickable="true"
                    android:background="?android:attr/selectableItemBackground"/>

                <TextView
                    android:id="@+id/tv_hot_promotion"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="活动优惠"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:layout_marginEnd="8dp"
                    android:clickable="true"
                    android:background="?android:attr/selectableItemBackground"/>

                <TextView
                    android:id="@+id/tv_hot_like"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="点赞消息"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:layout_marginEnd="8dp"
                    android:clickable="true"
                    android:background="?android:attr/selectableItemBackground"/>
            </LinearLayout>

            <!-- 第二行：2个标签 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_hot_order"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="订单通知"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:layout_marginEnd="8dp"
                    android:clickable="true"
                    android:background="?android:attr/selectableItemBackground"/>

                <TextView
                    android:id="@+id/tv_hot_system"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="系统通知"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:layout_marginEnd="8dp"
                    android:clickable="true"
                    android:background="?android:attr/selectableItemBackground"/>

                <!-- 第三列占位，保持三列对齐 -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- 搜索历史区域 -->
    <LinearLayout
        android:id="@+id/layout_search_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="搜索历史"
                android:textSize="14sp"
                android:textColor="#999999"/>

            <TextView
                android:id="@+id/tv_clear_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="清空"
                android:textSize="12sp"
                android:textColor="#666666"
                android:clickable="true"
                android:background="?android:attr/selectableItemBackground"/>
        </LinearLayout>

        <!-- 搜索历史列表 -->
        <LinearLayout
            android:id="@+id/layout_history_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp">

            <!-- 这里可以通过代码动态添加搜索历史项 -->
            <TextView
                android:id="@+id/tv_history_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="物流信息查询"
                android:textSize="12sp"
                android:textColor="#333333"
                android:paddingVertical="8dp"
                android:clickable="true"
                android:background="?android:attr/selectableItemBackground"/>

            <TextView
                android:id="@+id/tv_history_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="活动优惠券"
                android:textSize="12sp"
                android:textColor="#333333"
                android:paddingVertical="8dp"
                android:clickable="true"
                android:background="?android:attr/selectableItemBackground"/>

        </LinearLayout>
    </LinearLayout>

    <!-- 搜索结果区域 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_search_results"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <!-- 无结果提示 -->
    <LinearLayout
        android:id="@+id/layout_no_results"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_weixin_new"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="暂无搜索结果"
            android:textSize="16sp"
            android:textColor="#999999"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="换个关键词试试吧"
            android:textSize="14sp"
            android:textColor="#CCCCCC"/>
    </LinearLayout>

</LinearLayout>