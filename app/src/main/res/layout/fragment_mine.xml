<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 顶部用户信息栏 -->
        <LinearLayout
            android:id="@+id/layout_user_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:layout_marginBottom="8dp">

            <ImageView
                android:id="@+id/iv_avatar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:importantForAccessibility="no"
                android:src="@drawable/ic_launcher_background"
                android:scaleType="centerCrop"
                android:layout_marginEnd="12dp"
                android:background="#EEEEEE"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="@string/_2005"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_user_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_520_1314"
                    android:textColor="#666666"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>

        <!-- 我的订单区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:layout_marginBottom="6dp">

            <!-- 订单标题 -->
            <LinearLayout
                android:id="@+id/layout_all_orders"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:clickable="true"
                android:background="?android:attr/selectableItemBackground">

                <TextView
                    android:id="@+id/tv_my_orders"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/my_order"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/tv_view_all_orders"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/all_orders"
                    android:textSize="14sp"
                    android:textColor="#999999"/>

            </LinearLayout>

            <!-- 订单状态分类 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:paddingVertical="16dp">

                <!-- 待付款 -->
                <LinearLayout
                    android:id="@+id/layout_pending_payment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:focusable="true"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true"
                    android:background="?android:attr/selectableItemBackground">

                    <ImageView
                        android:id="@+id/iv_pending_payment"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/pending_payment"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/tv_pending_payment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pending_payment"
                        android:textSize="12sp"
                        android:textColor="#666666"/>
                </LinearLayout>

                <!-- 待发货 -->
                <LinearLayout
                    android:id="@+id/layout_pending_shipment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:focusable="true"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true"
                    android:background="?android:attr/selectableItemBackground">

                    <ImageView
                        android:id="@+id/iv_pending_shipment"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/tobe_shipped"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/tv_pending_shipment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tobe_shipped"
                        android:textSize="12sp"
                        android:textColor="#666666"/>
                </LinearLayout>

                <!-- 待收货 -->
                <LinearLayout
                    android:id="@+id/layout_pending_receipt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:focusable="true"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true"
                    android:background="?android:attr/selectableItemBackground">

                    <ImageView
                        android:id="@+id/iv_pending_receipt"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/awaiting_delivery"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/tv_pending_receipt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/awaiting_delivery"
                        android:textSize="12sp"
                        android:textColor="#666666"/>
                </LinearLayout>

                <!-- 待评价 -->
                <LinearLayout
                    android:id="@+id/layout_pending_review"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:focusable="true"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true"
                    android:background="?android:attr/selectableItemBackground">

                    <ImageView
                        android:id="@+id/iv_pending_review"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/tobe_evaluated"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/tv_pending_review"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tobe_evaluated"
                        android:textSize="12sp"
                        android:textColor="#666666"/>
                </LinearLayout>

                <!-- 退款/售后 -->
                <LinearLayout
                    android:id="@+id/layout_refund"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:focusable="true"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true"
                    android:background="?android:attr/selectableItemBackground">

                    <ImageView
                        android:id="@+id/iv_refund"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/refund_and_after_sales"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/tv_refund"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/refund_and_after_sales"
                        android:textSize="12sp"
                        android:textColor="#666666"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- 我的服务区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tv_my_services"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/my_services"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:paddingHorizontal="16dp"
                android:paddingVertical="12dp"/>

            <!-- 服务选项第一行 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="16dp">

                <!-- 收货地址 -->
                <LinearLayout
                    android:id="@+id/layout_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:focusable="true"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true"
                    android:background="?android:attr/selectableItemBackground">

                    <ImageView
                        android:id="@+id/iv_address"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/delivery_address"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/delivery_address"
                        android:textSize="12sp"
                        android:textColor="#666666"/>
                </LinearLayout>

                <!-- 足迹 -->
                <LinearLayout
                    android:id="@+id/layout_footprint"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:focusable="true"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true"
                    android:background="?android:attr/selectableItemBackground">

                    <ImageView
                        android:id="@+id/iv_footprint"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/footprints"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/tv_footprint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/footprints"
                        android:textSize="12sp"
                        android:textColor="#666666"/>
                </LinearLayout>

                <!-- 我的收藏 -->
                <LinearLayout
                    android:id="@+id/layout_favorite"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:focusable="true"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true"
                    android:background="?android:attr/selectableItemBackground">

                    <ImageView
                        android:id="@+id/iv_favorite"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/my_favorites"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/tv_favorite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/my_favorites"
                        android:textSize="12sp"
                        android:textColor="#666666"/>
                </LinearLayout>

                <!-- 服务中心 -->
                <LinearLayout
                    android:id="@+id/layout_service_center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:focusable="true"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true"
                    android:background="?android:attr/selectableItemBackground">

                    <ImageView
                        android:id="@+id/iv_service_center"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/service_center"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/tv_service_center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/service_center"
                        android:textSize="12sp"
                        android:textColor="#666666"/>
                </LinearLayout>
            </LinearLayout>

            <!-- 服务选项第二行 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="16dp">

                <!-- 在线客服 -->
                <LinearLayout
                    android:id="@+id/layout_online_service"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:focusable="true"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true"
                    android:background="?android:attr/selectableItemBackground">

                    <ImageView
                        android:id="@+id/iv_online_service"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/online_service"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/tv_online_service"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/online_customer_service"
                        android:textSize="12sp"
                        android:textColor="#666666"/>
                </LinearLayout>

                <!-- 退出登录 -->
                <LinearLayout
                    android:id="@+id/layout_logout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:focusable="true"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true"
                    android:background="?android:attr/selectableItemBackground">

                    <ImageView
                        android:id="@+id/iv_logout"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/back"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/tv_logout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="退出登录"
                        android:textSize="12sp"
                        android:textColor="#666666"/>
                </LinearLayout>
                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <!-- 占位 -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>

        <!-- 为你推荐 -->
        <TextView
            android:id="@+id/tv_recommend_for_you"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:text="@string/recommend_for_you"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- 推荐商品列表 -->
        <LinearLayout
            android:id="@+id/layout_recommend_products"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:paddingHorizontal="8dp"
            android:paddingVertical="8dp">

            <!-- 商品1 -->
            <LinearLayout
                android:id="@+id/layout_product_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                android:padding="8dp"
                android:clickable="true"
                android:background="?android:attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/iv_product_1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginEnd="12dp"
                    android:background="#EEEEEE"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_launcher_background" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_product_name_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:text="商品A"
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_product_tag_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:background="#FFEBEE"
                        android:paddingHorizontal="4dp"
                        android:paddingVertical="2dp"
                        android:text="特价"
                        android:textColor="#E53935"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_product_delivery_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="24H发货"
                        android:textColor="#666666"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_product_price_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥X/箱"
                        android:textColor="#E53935"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <!-- 商品2 -->
            <LinearLayout
                android:id="@+id/layout_product_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:clickable="true"
                android:background="?android:attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/iv_product_2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginEnd="12dp"
                    android:background="#EEEEEE"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_launcher_background" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_product_name_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:text="商品B"
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_product_tag_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:background="#FFEBEE"
                        android:paddingHorizontal="4dp"
                        android:paddingVertical="2dp"
                        android:text="特价"
                        android:textColor="#E53935"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_product_delivery_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="24H发货"
                        android:textColor="#666666"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_product_price_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥Y/箱"
                        android:textColor="#E53935"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- 底部占位，避免被底部导航栏遮挡 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="60dp" />

    </LinearLayout>
</ScrollView>