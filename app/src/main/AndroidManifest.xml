<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TePinhui">

        <!-- 主界面：现在是一个普通的 activity，只有登录成功才能进来 -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.category.CategoryActivity"
            android:exported="false" />

        <activity
            android:name=".SearchActivity"
            android:exported="false" />

        <!-- 登录界面：设置为启动页 (有 intent-filter) -->
        <activity
            android:name=".ui.auth.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 注册界面 -->
        <activity android:name=".ui.auth.RegisterActivity" />

        <!-- 商品详情界面 -->
        <activity android:name=".ui.product.ProductDetailActivity" />

        <!-- 购物车界面 -->
        <activity android:name=".ui.cart.CartActivity" />

        <!-- 我的页面相关Activity -->
        <activity android:name=".ui.order.AllOrdersActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name=".ui.order.PendingPaymentActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name=".ui.order.PendingShipmentActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name=".ui.order.PendingReceiptActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name=".ui.order.PendingReviewActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name=".ui.order.RefundActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name=".ui.mine.AddressActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name=".ui.mine.FootprintActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name=".ui.mine.FavoriteActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name=".ui.mine.ServiceCenterActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name=".ui.service.OnlineServiceActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

        <!-- 消息页面相关Activity -->
        <activity android:name=".ui.order.LogisticsInfoActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name=".PromotionInfoActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name=".ui.mine.LikeInfoActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name=".ui.message.MessageSettingActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name=".ui.message.MessageSearchActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

        <!-- 中国地图（省份可点击） -->
        <activity android:name=".ui.story.ProvinceMapActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:exported="false" />

        <!-- 省份特产列表 -->
        <activity
            android:name=".ui.story.ProvinceProductsActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:exported="false" />

    </application>

</manifest>